<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../style.css" />
    <link href="../lib/animate/animate.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../dist/css/iziToast.min.css">
    <link href="../lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="../lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="../lib/animate/animate.min.css" rel="stylesheet">
    <link rel="icon" type="icon" href="../assets/logo.png">
    <script src="../lib/jquery.min.js"></script>
    <script src="../dist/js/iziToast.min.js" type="text/javascript"></script>
    <script src="../https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="../bootstrap/js/bootstrap.min.js"></script>
    <style>
        html,body{
            box-sizing: border-box;
            height: 100%;
        }
    </style>
</head>
<body>

        <div class="container-fluid h-100" id="dashboard">
            <div class="row h-100">
                <div class="col-md-2">
                    <div class="left-bar">
                        <h6>NILEST VIRTUAL <br>E-LEARNING</h6>
                        <div class="nav-list">
                            <ul>
                                <li><a href="/staff/dashboard"><span class="fa fa-dashboard"></span> Dashboard</a></li>
                                <li><a href="/staff/create" class="active"><span class="fa fa-user"></span> Create Class</a></li>
                                <li><a href="/staff/view-class"><span class="fa fa-desktop"></span> View Classes</a></li>
                                <li><a href="/logout"><span class="fa fa-sign-out"></span> Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="main">
                       <h6><span class="fa fa-dashboard"></span> Staff Dashboard / Create Class Session</h6>
                    </div>
                    
                    <h2>CREATE CLASS SESSION</h2>
                    <br>
                    <div class="register shadow">
                     
                        <form action="/staff/create" method="POST">
                            <div class="row">

                                <div class="form-group col-md-12">
                                    <label for="">Course</label>
                                    <select name="course" class="form-control">
                                        <% cusCourse.forEach(cusCourse => { %>
                                            <option value="<%=cusCourse%>"><%=cusCourse%></option>
                                        <% }) %>
                                    </select>
                                </div>

                                    <div class="form-group col-md-12">
                                        <label for="">Department</label>
                                        <select name="dept" class="form-control" multiple>
                                            <% cusDept.forEach(cusDept => { %>
                                                <option value="<%=cusDept%>"><%=cusDept%></option>
                                            <% }) %>
                                        </select>
                                    </div>

                                    <div class="form-group col-md-12">
                                        <label for="">Level</label>
                                        <select name="level" id="" class="form-control">
                                            <% cusLevel.forEach(cusLevel => { %>
                                                <option value="<%=cusLevel%>"><%=cusLevel%></option>
                                            <% }) %>
                                        </select>
                                    </div>

 
                            <div class="form-group col-md-6">
                                <label for="">Date</label>
                                <input type="hidden" name="email" value="<%= id.email %>">
                                <input type="date" name="classdate" class="form-control">
                            </div>

                            <div class="form-group col-md-6">
                                <label for="">Time</label>
                                <input type="time"  onchange="onTimeChange()" id="timeInput" class="form-control">
                                <input type="hidden" name="classtime" id="time">
                            </div>
         
                            <div class="form-group col-md-12">
                            <label for="">Description</label>
                            <textarea name="descp" id=""  class="form-control" placeholder="Enter Class Description"></textarea>
                            </div>
                           
                            <div class="form-group col-md-12">
                                <br>
                            <button class="btn btn-success btn-lg btn-block">Create Class</button>
                            </div>
                        </form>
                    </div>


                </div>

                
            </div>
        </div>

        <script>
            var inputEle = document.getElementById('timeInput');
            function onTimeChange() {
                var timeSplit = inputEle.value.split(':'),
                    hours,
                    minutes,
                    meridian;
                hours = timeSplit[0];
                minutes = timeSplit[1];
                if (hours > 12) {
                    meridian = 'PM';
                    hours -= 12;
                } else if (hours < 12) {
                    meridian = 'AM';
                    if (hours == 0) {
                    hours = 12;
                    }
                } else {
                    meridian = 'PM';
                }
                document.getElementById("time").value = hours + ':' + minutes + ' ' + meridian;
                }
        </script>

        <% if(userName == "false") { %>
            <script>
                iziToast.info({
                title: '',
                message: 'Choose another time or date',
                position: 'topRight',
                animateInside: true,
                });
            </script>
            <% }else if(userName=="success"){ %>
               
                <script>
                    iziToast.success({
                    title: '',
                    message: 'Class Created Successfully',
                    position: 'topRight',
                    animateInside: true,
                    });
                </script>
                
               
            <% }else{ %>
               
           <% } %>
      
</body>
</html>